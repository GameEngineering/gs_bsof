// color.sf

pipeline { 

    raster 
    { 
        primitive: LINES
        index_buffer_element_size: UINT32
    },

    depth 
    {
        func: LESS 
    }, 

    shader { 
    
        vertex { 

            attributes { 

                POSITION : a_position
            }, 

            uniforms {
                mat4 u_mvp;
            },

            out {
                vec3 position;
            },

            code { 
                void main() {
                    gl_Position = u_mvp * vec4(a_position, 1.0);
                    position = a_position;
                }
            }
        },

        fragment { 

            uniforms {
                vec3 u_color;
            }, 
            
            out {
                vec4 frag_color;            
            },

            code {
                void main() {
                    frag_color = vec4(u_color.rgb, 1.0);
                }
            }
        } 
    } 
} 
